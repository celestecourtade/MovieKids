---
const images = [
  "/img/moana-carrusel.webp",
  "/img/luca-carrusel.webp",
  "/img/enredados-carrusel.webp"
];
---

<style>
.carousel {
  position: relative;
  width: 100%;
  max-width: 100%; /* relativo al ancho de la ventana */
  margin: auto;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15); /* sombra suave */
}

.carousel-track {
  display: flex;
  transition: transform 0.5s ease-in-out;
}

.carousel-track img {
  width: 100%;
  height: 40vw; /* relativo al ancho para mantener proporción */
  max-height: 60%; /* no más alto que 60% de la altura de pantalla */
  flex-shrink: 0;
}

.carousel-dots {
  text-align: center;
  margin-top: 0.8rem;
  margin-bottom: 1rem;
}

.carousel-dots span {
  display: inline-block;
  height: 0.6rem;
  width: 0.6rem;
  margin: 0 0.3rem;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.carousel-dots .active {
  background-color: rgba(0, 0, 0, 0.7);
}

/* Móviles pequeños */
@media (max-width: 600px) {
  .carousel {
    border-radius: 0.5rem;
  }

  .carousel-track img {
    height: 55vw;
  }

  .carousel-dots span {
    height: 0.5rem;
    width: 0.5rem;
  }
}
</style>

<div class="carousel" id="carousel">
  <div class="carousel-track" id="carousel-track">
    {images.map((src) => (
      <img src={src} alt="Imagen del carrusel" />
    ))}
  </div>
</div>

<div class="carousel-dots" id="carousel-dots">
  {images.map((_, i) => (
    <span class={i === 0 ? "active" : ""}></span>
  ))}
</div>

<script is:inline>
  const track = document.getElementById("carousel-track");
  const dots = document.querySelectorAll("#carousel-dots span");
  const totalSlides = dots.length;
  let index = 0;

  function showSlide(i) {
    track.style.transform = `translateX(-${i * 100}%)`;
    dots.forEach(dot => dot.classList.remove("active"));
    dots[i].classList.add("active");
  }

  function nextSlide() {
    index = (index + 1) % totalSlides;
    showSlide(index);
  }

  let autoSlide = setInterval(nextSlide, 3000);

  // Click en los puntitos
  dots.forEach((dot, i) => {
    dot.addEventListener("click", () => {
      index = i;
      showSlide(index);
      clearInterval(autoSlide);
      autoSlide = setInterval(nextSlide, 3000);
    });
  });

  // Ajustar en cambio de tamaño
  window.addEventListener("resize", () => {
    showSlide(index);
  });
</script>
