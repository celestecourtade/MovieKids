---
// Header.astro
---
<header class="header">
  <div class="izquierda">
    <a href="/" class="titulo">🎬 MovieKids</a>
  </div>

  <div class="centro">
    <a href="/favoritos" class="nav-link">Mi Lista</a>
    <button id="modo-btn" class="modo-toggle">🌙</button>

    <input
      type="text"
      id="busqueda"
      placeholder="Buscar películas..."
      class="input-busqueda"
    />
  </div>

  <div class="derecha">
    <a href="/cuenta" class="icono-cuenta">👤</a>
  </div>

  <style>
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #060010;
      color: white;
      padding: 0.625rem 1.25rem; /* 10px 20px */
      position: sticky;
      top: 0;
      z-index: 100;
      font-size: 1rem; /* base para rem */
    }

    .izquierda .titulo {
      font-size: 1.8rem; /* relativo al font-size base */
      font-weight: 700;
      color: #ff4081;
      text-decoration: none;
      white-space: nowrap;
    }

    .centro {
      display: flex;
      gap: 2rem; /* más separación */
      align-items: center;
      flex-wrap: wrap;
      flex-grow: 1;
      justify-content: center;
      min-width: 0; /* para que input no crezca demasiado */
    }

    .nav-link {
      color: white;
      text-decoration: none;
      font-weight: 700;
      font-size: 1rem;
      white-space: nowrap;
    }

    .modo-toggle {
      background-color: #ff4081;
      border: none;
      padding: 0.5rem 0.75rem; /* 8px 12px */
      border-radius: 0.375rem; /* 6px */
      color: white;
      cursor: pointer;
      font-weight: 700;
      font-size: 1.2rem;
      white-space: nowrap;
      transition: background-color 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
    }

    .modo-toggle:hover {
      background-color: #e91e63;
    }

    .input-busqueda {
      padding: 0.375rem 0.625rem; /* 6px 10px */
      border-radius: 0.375rem;
      border: none;
      font-size: 1rem;
      min-width: 150px;
      max-width: 20vw;
      box-sizing: border-box;
    }

    .derecha .icono-cuenta {
      font-size: 1.7rem;
      text-decoration: none;
      color: #ff4081; /* color más vivo */
      white-space: nowrap;
      transition: color 0.3s ease;
    }

    .derecha .icono-cuenta:hover {
      color: #e91e63;
    }

    /* Responsive: en pantallas muy pequeñas */
    @media (max-width: 480px) {
      .header {
        flex-wrap: wrap;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
      }

      .centro {
        justify-content: space-between;
        gap: 1rem;
        width: 100%;
        margin-top: 0.5rem;
      }

      .input-busqueda {
        max-width: 100%;
        flex-grow: 1;
      }
    }
  </style>

<script is:inline>
    const botonModo = document.getElementById('modo-btn');

    function actualizarModo() {
    if (localStorage.getItem('modoOscuro') === 'true') {
        document.body.classList.add('modo-oscuro');
        botonModo.textContent = '☀️';
    } else {
        document.body.classList.remove('modo-oscuro');
        botonModo.textContent = '🌙';
    }
    }

    botonModo.addEventListener('click', () => {
    const modoActual = document.body.classList.toggle('modo-oscuro');
    localStorage.setItem('modoOscuro', modoActual);
    actualizarModo();
    });

    window.addEventListener('load', () => {
    actualizarModo();
    });
</script>

