---
import Header from '../components/Header.astro';
const { title } = Astro.props;
---

<html lang="es" class="light">
  <head>
    <script>
      // Prevenir parpadeo de tema al cambiar de p√°gina
      (function () {
        try {
          const savedTheme = localStorage.getItem('theme');
          const html = document.documentElement;
          if (savedTheme === 'dark') {
            html.classList.add('dark');
          } else {
            html.classList.add('light');
          }
        } catch (e) {
          document.documentElement.classList.add('light');
        }
      })();
    </script>
    
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <style>
      /* Variables para modo claro */
      :root {
        --color-fondo: linear-gradient(to bottom, #f0e6ff, #d6c0ff);
        --color-titulo: #e91e63;
        --color-texto: #000000;
        --color-primario: #ff4081;
        --color-overlay: rgba(255, 255, 255, 0.85);
        --color-boton: #ff4081;
        --color-boton-hover: #e91e63;
        --color-boton-deshabilitado: #ccc;
        --color-boton-texto-deshabilitado: #666;
        --color-sombra: rgba(0, 0, 0, 0.3);
      }

      /* Variables para modo oscuro */
      html.dark {
        --color-fondo: linear-gradient(to bottom, #2f1b55, #78297e);
        --color-paginado: #78297e;
        --color-titulo: #e91e63;
        --color-texto: #ffffff;
        --color-primario: #ff4081;
        --color-overlay: rgba(0, 0, 0, 0.85);
        --color-boton: #ff4081;
        --color-boton-hover: #e91e63;
        --color-boton-deshabilitado: #444;
        --color-boton-texto-deshabilitado: #999;
        --color-sombra: rgba(0, 0, 0, 0.7);
      }

      body {
        margin: 0;
        min-height: 100vh;
        background: var(--color-fondo);
        color: var(--color-texto);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
          sans-serif;
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      a {
        color: var(--color-primario);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .toggle-btn {
        position: fixed;
        top: 1rem;
        right: 5rem;
        padding: 0.5rem 1rem;
        cursor: pointer;
        z-index: 999;
        background-color: var(--color-boton);
        color: white;
        border: none;
        border-radius: 0.375rem;
        font-weight: 700;
        transition: background-color 0.3s ease;
      }

      .toggle-btn:hover {
        background-color: var(--color-boton-hover);
      }
    </style>

    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        const html = document.documentElement;
        const toggleBtn = document.getElementById("theme-toggle");

        // Detectar si ya hay un tema guardado
        let savedTheme = localStorage.getItem("theme");

        // Si no hay, usar preferencia del sistema
        if (!savedTheme) {
          const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
          savedTheme = prefersDark ? "dark" : "light";
          localStorage.setItem("theme", savedTheme);
        }

        // Aplicar el tema actual
        if (savedTheme === "dark") {
          html.classList.add("dark");
          html.classList.remove("light");
          toggleBtn.textContent = "üåô"; // Modo oscuro activo
        } else {
          html.classList.add("light");
          html.classList.remove("dark");
          toggleBtn.textContent = "‚òÄÔ∏è"; // Modo claro activo
        }

        // Evento para alternar el tema
        toggleBtn.addEventListener("click", () => {
          if (html.classList.contains("dark")) {
            html.classList.remove("dark");
            html.classList.add("light");
            toggleBtn.textContent = "‚òÄÔ∏è"; // Qued√≥ claro
            localStorage.setItem("theme", "light");
          } else {
            html.classList.remove("light");
            html.classList.add("dark");
            toggleBtn.textContent = "üåô"; // Qued√≥ oscuro
            localStorage.setItem("theme", "dark");
          }
        });
      });
    </script>

  </head>

  <body>
    <Header />
    <button id="theme-toggle" class="toggle-btn">üåô</button>
    <slot />
  </body>
</html>
